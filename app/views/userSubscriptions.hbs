<div class="container py-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3>User Subscriptions</h3>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Amount</th>
                            <th>Type</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each subscriptions}}
                            <tr>
                                <td>{{this.orderId}}</td>
                                <td>{{this.currency}} {{this.amount}}</td>
                                <td>{{this.type}}</td>
                                <td>{{this.createdAt}}</td>
                                <td>
                                    <a href="/subscriptions/{{this.id}}" class="btn btn-primary btn-sm">
                                        View
                                    </a>
                                </td>
                            </tr>
                        {{else}}
                            <tr>
                                <td colspan="4">No records found</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>