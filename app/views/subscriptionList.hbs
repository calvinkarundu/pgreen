<div class="container">
    <div class="row">
        <div class="col-md-12 py-3">
            <div class="card">
                <div class="card-body">
                    <div class="clearfix my-3">
                        <h3 class="float-left">Subscription Transactions</h3>
                        <form action="/transactions/subscriptions" method="post" class="float-right">
                            <button class="btn btn-primary" type="submit">Seed</button>
                        </form>
                    </div>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Buyer</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each subscriptions}}
                            <tr>
                                <td>{{this.orderId}}</td>
                                <td>{{this.buyer.firstName}} {{this.buyer.lastName}}</td>
                                <td>{{this.amount}} ({{this.currency}})</td>
                                <td>{{this.result.status}}</td>
                                <td>
                                    <a href="/transactions/subscriptions/{{this.id}}" class="btn btn btn-primary btn-sm">View</a>
                                </td>
                            </tr>
                        {{else}}
                            <tr>
                                <td colspan="5">No records found.</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>