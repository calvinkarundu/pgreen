<div class="container py-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center">Payment Types</h3>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Currency</th>
                            <th>Payment Type</th>
                            <th>Status</th>
                            <th>Payment Modes</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each paymentTypes}}
                            <tr>
                                <td>{{this.currency}}</td>
                                <td>{{this.paymentType}}</td>
                                <td>{{this.status}}</td>
                                <td>
                                    {{#each this.availablePaymentMode}}
                                        {{this}},
                                    {{/each}}
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>